{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "baseUrl": "src",
    "paths": {
      "/src/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "globals.d.ts"
  ]
}